class Solution {
public:
    bool canPlaceFlowers(vector<int>& flowerbed, int n) {
        int flag=1,size=flowerbed.size();
        for(int i =0;i<size;i++){
            //if(n==0) return true;
            if (flag==0) { flag=1;continue;}
            if(flowerbed[i]==1){flag=0;continue;}
            if((i<size-1&&flowerbed[i+1]==0)||i==size-1) {
                n--;flag=0;
                flowerbed[i]=1;
            }
            else continue; 
            

        }
        if(n<=0) return true;
        return false;
        
    }
};
