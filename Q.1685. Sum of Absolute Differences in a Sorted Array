class Solution {
public:
    vector<int> getSumAbsoluteDifferences(vector<int>& nums) {
        int n=nums.size(),sum=0;
        vector<int> result(n);
        for(int i=0;i<n;++i){
            sum+=nums[i];
        }
        int left=0,x,ans;
        for(int i=0;i<n;++i){
            x=nums[i];
            left+=x;
            ans=x*(i+1)-left*2+sum-x*(n-i-1);
            result[i]=ans;
        }
        return result;

    }
};
