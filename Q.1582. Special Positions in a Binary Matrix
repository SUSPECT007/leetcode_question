class Solution {
    int add_r(vector<int> v){
        int ans=0;
        for(int i :v) ans+=i;
        return ans;
    }
    int add_c(vector<vector<int>>& mat,int c){
        int ans=0;
        for(vector<int> r :mat) ans+=r[c];
        return ans;
    }
public:
    int numSpecial(vector<vector<int>>& mat) {
        int m=mat.size(),n=mat[0].size(),count=0;
        for(vector<int> r :mat){
            if(add_r(r)!=1) continue;
            for(int c=0;c<n;++c)
                if(r[c]==1 && add_c(mat,c)==1) ++count;
            
        }
        return count;
    }
};
