class Solution {
public:
    string largestOddNumber(string num) {
        int index=num.size()-1;
        string ans="";
        while(index>=0){
            if ((num[index]-'0')%2!=0) break;

            --index;
        }
        for(int i=0;i<=index;++i){
            ans+=num[i];
        }
        return ans;
    }
};
