/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
int solve (int ans,TreeNode* r){
    if (!r) return ans;
    ans=ans*10+r->val;
    if (!r->left && !r->right) return ans;
    if (r->left && r->right)   return solve (ans,r->left)+solve(ans,r->right);
    if (r->left)  return solve (ans,r->left);
    if (r->right) return solve (ans,r->right);
    return 0;

    
   
}


    int sumNumbers(TreeNode* root) {
        int ans=0;
        
        return solve(ans,root);
    }
};
