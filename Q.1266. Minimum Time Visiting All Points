class Solution {
public:
    int P2P(vector<int> p1,vector<int> p2){
        int a=abs(p1[0]-p2[0]),b=abs(p1[1]-p2[1]);
        return max(a,b);
    }
    int minTimeToVisitAllPoints(vector<vector<int>>& points) {
        int time=0;
        for(int i=1;i<points.size();++i)
            time+=P2P(points[i],points[i-1]);
        return time;
    }
};
