/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    void solution(TreeNode* r,string & ans){
        if(!r) return;
        ans+=to_string(r->val);
        if(r->left||r->right){
            ans+='(';
            solution(r->left,ans);
            ans+=')';
        }
        if(r->right){
            ans+='(';
            solution(r->right,ans);
            ans+=')';
        }
    }
    string tree2str(TreeNode* root) {
        string ans="";
        solution(root,ans);
        return ans;
    }
};
